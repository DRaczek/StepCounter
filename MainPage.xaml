<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:StepCounter.ViewModels"
             x:Class="StepCounter.MainPage"
             Title="Krokomierz">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Kroki" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center" />
        <Label Text="{Binding DailySteps}" FontSize="48" HorizontalOptions="Center" />

        <Label Text="Uwaga: wymagane uprawnienia i obsługa urządzenia z sensorami." FontSize="12" HorizontalOptions="Center" TextColor="Gray"/>
    </VerticalStackLayout>
</ContentPage>
